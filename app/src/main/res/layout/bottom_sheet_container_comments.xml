<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/bottomSheetContainer"
    android:layout_height="match_parent"

    android:background="@drawable/bottom_sheet_backround"
   >

    <View
        android:id="@+id/view"
        android:layout_width="50dp"
        android:layout_height="4dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="8dp"
        android:background="#393939"></View>




        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="85dp"
            android:id="@+id/recycler_view"
            ></androidx.recyclerview.widget.RecyclerView>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        android:background="@color/searchbar_color"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"></de.hdodenhof.circleimageview.CircleImageView>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/image_profile"
            android:id="@+id/add_comment"
            android:hint="Add a comment...."
            android:textColor="@color/text_color_white"
            android:textColorHint="@color/text_color_white"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:background="@android:color/transparent"
            ></EditText>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/post"
            android:text="POST"
            android:textStyle="bold"
            android:layout_marginEnd="5dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:textColor="@color/blue_main"></TextView>

    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/searchbar_color"

        android:layout_height="90dp"
        android:layout_above="@+id/bottom"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/awesome"
            android:layout_width="45dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="ðŸ˜"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/love"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:clickable="true"
            android:gravity="center"
            android:text="ðŸ§¡"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/fire"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="ðŸ”¥"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>

        <ImageView
            android:id="@+id/like"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:src="@drawable/fifty"
            android:textColor="#FF0000"
            android:textStyle="bold"></ImageView>

        <ImageView
            android:id="@+id/dislike"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:src="@drawable/thirty"
            android:textColor="#FF0000"
            android:textStyle="bold"></ImageView>
        <TextView
            android:layout_width="45dp"
            android:id="@+id/superone"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="ðŸ‘Œ"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>

        <TextView
            android:layout_width="45dp"
            android:id="@+id/sadcry"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:text="ðŸ˜­"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/angry"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="5dp"
            android:gravity="center"
            android:text="ðŸ˜¡"
            android:textColor="#FF0000"
            android:textStyle="bold"></TextView>
    </LinearLayout>
</RelativeLayout>